<div class="container">
  <div class="row">
    <div class="col-sm-8">
        <h2>Restaurant</h2>
        <p><%= @restaurant.name %></p>
        <p><%= @restaurant.address %></p>
        <p><%= @restaurant.category %></p>
        <p><%= @restaurant.phone_number %></p>
        <h2>Reviews</h2>
        <% @restaurant.reviews.each do |review| %>
          <p><%= review.content %></p>
          <p><%= review.rating %>/5</p>
        <% end %>

        <%= link_to new_restaurant_review_path(@restaurant) do %>
          <button type="button" class="btn btn-warning">Review</button>
        <% end %>

        <%= link_to edit_restaurant_path(@restaurant) do %>
          <button type="button" class="btn btn-info">Edit</button>
        <% end %>

        <%= link_to restaurant_path(@restaurant),method: :delete,
            data: { confirm: "Are you sure?" } do %>
        <button type="button" class="btn btn-danger">Delete</button>
        <% end %>

        <%= link_to restaurants_path do %>
          <button type="button" class="btn btn-primary">Back</button>
        <% end %>
    </div>
  </div>
</div>


