<%= simple_form_for [@restaurant, @review] do |f| %>
 <% if @review.errors.any? %>
   <div id="error_explanation">
     <ul>
     <% @review.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
     </ul>
   </div>
 <% end %>

 <%= f.input :content %>
 <%= f.input :rating %>

 <%= f.button :submit %>
 <%= link_to "Back", restaurant_path(@restaurant), {class: "btn btn-primary"} %>
<% end %>
